<window border = "normal" width = "500px" Title = "Change Password"
	apply = "com.github.yury1991.authorization.ChangeController">
	<grid>	
		<rows>
			<row>
				<label value= "Enter new password"/>
			</row>
			<row>
				New Password <textbox id = "changePass"  hflex="1" constraint="no empty: Please enter password" />
			</row>
			<row spans = "2" align = "center">
				<button id = "confirmButton" label = "confirm" autodisable="self"/>			
				<button id = "backButton" label = "back" href = "user.zul"/>
			</row>
		</rows>				   
	</grid>			
</window>